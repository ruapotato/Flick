{
  "format_version": 1,
  "id": "com.flick.podcast",
  "name": "Podcasts",
  "version": "1.0.0",
  "description": "Podcast player with RSS feed subscriptions and episode management.",
  "long_description": "Listen to your favorite podcasts:\n\n- RSS feed subscriptions\n- Episode download and streaming\n- Playback speed control\n- Progress tracking\n- Background playback\n- Search podcasts\n- Episode queue management",
  "author": {
    "name": "Flick Project",
    "email": "flick@example.com",
    "url": "https://github.com/ruapotato/Flick"
  },
  "license": "AGPL-3.0",
  "categories": ["Audio", "Player"],
  "keywords": ["podcast", "audio", "rss", "player", "streaming"],
  "homepage": "https://github.com/ruapotato/Flick",
  "repository": "https://github.com/ruapotato/Flick",

  "app": {
    "type": "qml",
    "entry": "main.qml",
    "min_flick_version": "1.0.0"
  },

  "dependencies": {
    "apt": [
      "qml-module-qtmultimedia",
      "libqt5multimedia5-plugins"
    ],
    "pip": {
      "enabled": false,
      "packages": []
    }
  },

  "permissions": [
    "audio",
    "network",
    "files:write:~/.local/share/flick-podcasts",
    "background"
  ],

  "ai_generated": {
    "is_ai_generated": false
  },

  "store": {
    "maturity_rating": "everyone",
    "price": "free",
    "testing_status": "stable",
    "featured": false
  }
}
