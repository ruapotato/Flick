{
  "format_version": 1,
  "id": "com.flick.recorder",
  "name": "Voice Recorder",
  "version": "1.0.0",
  "description": "Simple voice recorder with playback and file management.",
  "long_description": "Record audio with ease:\n\n- One-tap recording\n- Pause and resume\n- Recording list with playback\n- Delete recordings\n- Recording duration display\n- Auto-save recordings\n- Multiple audio format support",
  "author": {
    "name": "Flick Project",
    "email": "flick@example.com",
    "url": "https://github.com/ruapotato/Flick"
  },
  "license": "AGPL-3.0",
  "categories": ["Audio", "Utilities"],
  "keywords": ["recorder", "audio", "voice", "recording", "microphone"],
  "homepage": "https://github.com/ruapotato/Flick",
  "repository": "https://github.com/ruapotato/Flick",

  "app": {
    "type": "qml",
    "entry": "main.qml",
    "min_flick_version": "1.0.0"
  },

  "dependencies": {
    "apt": [
      "qml-module-qtmultimedia",
      "libqt5multimedia5-plugins",
      "ffmpeg"
    ],
    "pip": {
      "enabled": false,
      "packages": []
    }
  },

  "permissions": [
    "audio",
    "microphone",
    "files:write:~/Recordings"
  ],

  "ai_generated": {
    "is_ai_generated": false
  },

  "store": {
    "maturity_rating": "everyone",
    "price": "free",
    "testing_status": "stable",
    "featured": false
  }
}
