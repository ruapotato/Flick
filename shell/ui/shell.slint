    name: string,
    exec: string,
}

// Notification data structure
export struct Notification {
    id: int,
    app-name: string,
    app-icon: string,
    title: string,
    body: string,
    time: string,
    urgency: int,  // 0=low, 1=normal, 2=critical
}

// Window card for app switcher
